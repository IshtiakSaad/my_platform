---
import '../styles/global.css';
import '@fontsource/inter';
import '@fontsource/playfair-display';

// We use a Google Font for the icons to match your design exactly
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" rel="stylesheet" />
  </head>
  <body class="flex flex-col min-h-screen">
    
    <header class="w-full px-6 py-6 md:px-12 flex items-center justify-between border-b border-editorial-border sticky top-0 bg-[#f8f8f5]/95 backdrop-blur-md z-50">
        <a href="/" class="text-2xl font-serif font-bold tracking-tight hover:text-editorial-accent transition-colors">
            Ishtiak Saad
        </a>

        <nav class="hidden md:flex items-center gap-8">
            <a href="/tech" class="text-[10px] font-bold uppercase tracking-[0.25em] text-editorial-muted hover:text-editorial-accent transition-colors">Technology</a>
            <a href="/psychology" class="text-[10px] font-bold uppercase tracking-[0.25em] text-editorial-muted hover:text-editorial-accent transition-colors">Psychology</a>
            <a href="/economics" class="text-[10px] font-bold uppercase tracking-[0.25em] text-editorial-muted hover:text-editorial-accent transition-colors">Economics</a>
            <a href="/philosophy" class="text-[10px] font-bold uppercase tracking-[0.25em] text-editorial-muted hover:text-editorial-accent transition-colors">Philosophy</a>
        </nav>
        
        <button class="md:hidden text-editorial-text">
            <span class="material-symbols-outlined">menu</span>
        </button>
    </header>

    <main class="flex-grow w-full max-w-[1400px] mx-auto px-6 md:px-12 pb-32">
        <slot />
    </main>

    <footer class="w-full border-t border-editorial-border py-12 bg-white mt-auto">
        <div class="max-w-[1400px] mx-auto px-6 md:px-12 flex flex-col md:flex-row justify-between items-center gap-8">
            <div class="flex flex-col gap-2">
                <span class="text-xl font-serif font-bold">Ishtiak Saad</span>
                <p class="text-[10px] font-bold uppercase tracking-widest text-editorial-muted">Â© {new Date().getFullYear()} All rights reserved.</p>
            </div>
            <div class="flex gap-10">
                <a href="#" class="text-[10px] font-bold uppercase tracking-widest text-editorial-muted hover:text-editorial-accent transition-colors">Twitter</a>
                <a href="#" class="text-[10px] font-bold uppercase tracking-widest text-editorial-muted hover:text-editorial-accent transition-colors">LinkedIn</a>
            </div>
        </div>
    </footer>

  </body>
</html>