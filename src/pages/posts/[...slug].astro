---
import { getCollection } from "astro:content";
import BaseLayout from "../../layout/BaseLayout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Helper for date formatting
const formattedDate = post.data.pubDate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout title={`${post.data.title} - Ishtiak Saad`}>
  <article class="w-full max-w-[1400px] mx-auto px-1 md:px-12 lg:px-20 py-10 lg:py-20">
    <a
      href="/"
      class="inline-flex items-center gap-2 text-[10px] font-bold uppercase tracking-[0.2em] text-editorial-muted hover:text-editorial-accent mb-6 lg:mb-12 transition-colors border-b border-transparent hover:border-editorial-accent pb-1"
    >
      <span class="material-symbols-outlined text-sm">arrow_back</span> Return Home
    </a>

    <header class="max-w-3xl mx-auto mb-16">
      <div
        class="flex items-center gap-4 text-[10px] font-bold uppercase tracking-[0.25em] text-editorial-accent mb-6 font-sans"
      >
        <span>{post.data.category || "Essay"}</span>
        <span class="w-4 h-[1px] bg-editorial-border"></span>
        <span>{formattedDate}</span>
      </div>

      <h1
        class="text-3xl md:text-4xl lg:text-5xl font-serif font-bold text-editorial-text leading-[1.1] mb-8"
      >
        {post.data.title}
      </h1>

      <div class="border-l-2 border-editorial-accent pl-6 py-2 my-8">
        <p
          class="text-xl md:text-2xl text-editorial-muted font-serif italic leading-relaxed"
        >
          {post.data.description}
        </p>
      </div>

      <div
        class="flex items-center gap-3 mt-8 pt-8 border-t border-editorial-border/40"
      >
        <div class="w-8 h-8 bg-editorial-text rounded-full"></div>
        <div class="flex flex-col">
          <span
            class="text-[10px] font-bold uppercase tracking-widest text-editorial-text font-sans"
            >Ishtiak Saad</span
          >
          <span class="text-[10px] text-editorial-muted font-sans">Author</span>
        </div>
      </div>
    </header>

    <div class="max-w-3xl mx-auto">
      <div
        class="prose prose-lg prose-stone max-w-none
            prose-headings:font-serif prose-headings:font-bold prose-headings:text-editorial-text
            prose-p:font-sans-serif prose-p:text-editorial-text/90 prose-p:leading-8 prose-p:mb-6
            prose-p:text-justify prose-p:hyphens-auto
            prose-a:text-editorial-accent prose-a:no-underline hover:prose-a:underline
            prose-blockquote:border-l-editorial-accent prose-blockquote:bg-white/50 prose-blockquote:py-2 prose-blockquote:px-6 prose-blockquote:italic prose-blockquote:font-serif
            prose-strong:font-bold prose-strong:text-editorial-text
            prose-li:font-sans-serif marker:prose-li:text-editorial-accent"
      >
        <Content />
      </div>

      <div class="flex justify-center my-16 opacity-30">
        <span class="text-4xl font-serif">***</span>
      </div>
    </div>

    <div class="border-t border-editorial-border pt-16 mt-16 max-w-3xl mx-auto">
      <h3 class="font-serif text-3xl font-bold mb-4 italic">
        Enjoyed this essay?
      </h3>
      <p class="text-editorial-muted font-serif mb-8">
        Join 200+ others receiving the Sunday Digest.
      </p>
      <form class="flex gap-4">
        <input
          class="w-full px-4 py-3 bg-white border border-editorial-border focus:border-editorial-accent focus:outline-none font-serif"
          placeholder="Email Address"
          type="email"
        />
        <button
          class="bg-editorial-text text-white px-8 py-3 text-xs font-bold uppercase tracking-widest hover:bg-editorial-accent hover:text-editorial-text transition-colors font-sans"
        >
          Subscribe
        </button>
      </form>
    </div>
  </article>
</BaseLayout>
