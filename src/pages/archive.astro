---
import BaseLayout from '../layout/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 1. Fetch all non-draft posts
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// 2. Sort by Date (Newest first)
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// 3. Group by Year
const postsByYear = sortedPosts.reduce((acc, post) => {
    const year = post.data.pubDate.getFullYear();
    if (!acc[year]) {
        acc[year] = [];
    }
    acc[year].push(post);
    return acc;
}, {});

// Get sorted years keys (2025, 2024, etc.)
const years = Object.keys(postsByYear).sort((a, b) => b - a);

const formatDate = (date) => date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
---

<BaseLayout title="Archive - Ishtiak Saad">
  
  <section class="py-12 md:py-20 lg:py-28 border-b border-editorial-border mb-12 md:mb-16">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6">
        <span class="text-[9px] sm:text-[10px] font-bold uppercase tracking-[0.25em] text-editorial-muted mb-3 block">
            The Index
        </span>
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-8xl font-serif font-bold text-editorial-text tracking-tight mb-6 sm:mb-8">
          Archive
        </h1>
        <p class="text-base sm:text-lg md:text-xl text-editorial-muted font-serif italic leading-relaxed max-w-2xl mx-auto">
          The complete collection of {allPosts.length} essays, notes, and observations.
        </p>
    </div>
  </section>

  <section class="max-w-4xl mx-auto px-4 sm:px-6 pb-16 md:pb-32">

    {years.map((year) => (
        <div class="relative grid grid-cols-1 md:grid-cols-12 gap-6 md:gap-8 mb-12 md:mb-20">
            
            <div class="md:col-span-2 text-left md:text-left mb-4 md:mb-0">
                <span class="sticky top-20 md:top-24 text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold font-serif text-editorial-border">
                    {year}
                </span>
            </div>

            <div class="md:col-span-10 flex flex-col border-t border-editorial-border">
                {postsByYear[year].map((post) => (
                    <article class="group relative flex flex-col md:flex-row md:items-center md:justify-between py-4 md:py-6 border-b border-editorial-border/60 hover:bg-background-light transition-colors">
                        
                        <div class="md:w-3/4 pr-0 md:pr-8">
                            <h3 class="text-xl sm:text-2xl md:text-2xl lg:text-2xl font-sans font-bold text-editorial-text group-hover:text-primary transition-colors leading-snug mb-1 sm:mb-2">
                                <a href={`/posts/${post.slug}`} class="focus:outline-none relative block">
                                    {post.data.title}
                                </a>
                            </h3>
                            {/* Uncomment below if you want descriptions */}
                            {/* <p class="text-sm sm:text-base text-editorial-muted font-serif line-clamp-1">
                                {post.data.description}
                            </p> */}
                        </div>

                        <div class="mt-3 md:mt-0 md:w-1/4 flex flex-wrap md:flex-nowrap items-center justify-start md:justify-end gap-2 sm:gap-4 text-[9px] sm:text-[10px] font-bold uppercase tracking-widest text-editorial-muted">
                            <span class="bg-editorial-border/30 px-2 py-1 rounded-sm text-editorial-text/70 group-hover:bg-primary/10 group-hover:text-primary transition-colors whitespace-nowrap">
                                {post.data.category}
                            </span>
                            <time class="whitespace-nowrap">
                                {formatDate(post.data.pubDate)}
                            </time>
                        </div>

                    </article>
                ))}
            </div>
        </div>
    ))}

    {allPosts.length === 0 && (
        <div class="text-center py-12 md:py-20 border border-dashed border-editorial-border">
            <p class="text-editorial-muted font-serif italic text-lg md:text-xl">The pages are blank. Start writing.</p>
        </div>
    )}

  </section>

</BaseLayout>
