---
import BaseLayout from '../layout/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 1. Fetch all non-draft posts
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// 2. Sort by Date (Newest first)
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// 3. Group by Year
const postsByYear = sortedPosts.reduce((acc, post) => {
    const year = post.data.pubDate.getFullYear();
    if (!acc[year]) {
        acc[year] = [];
    }
    acc[year].push(post);
    return acc;
}, {});

// Get sorted years keys (2025, 2024, etc.)
const years = Object.keys(postsByYear).sort((a, b) => b - a);

const formatDate = (date) => date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
---

<BaseLayout title="Archive - Ishtiak Saad">
  
  <section class="py-20 md:py-28 border-b border-editorial-border mb-16">
    <div class="max-w-4xl mx-auto text-center">
        <span class="text-[10px] font-bold uppercase tracking-[0.25em] text-editorial-muted mb-4 block">
            The Index
        </span>
        <h1 class="text-6xl md:text-8xl font-serif font-bold text-editorial-text tracking-tight mb-8">
          Archive
        </h1>
        <p class="text-xl md:text-2xl text-editorial-muted font-serif italic leading-relaxed max-w-2xl mx-auto">
          The complete collection of {allPosts.length} essays, notes, and observations.
        </p>
    </div>
  </section>

  <section class="max-w-4xl mx-auto pb-32">
    
    {years.map((year) => (
        <div class="relative grid grid-cols-1 md:grid-cols-12 gap-8 mb-20">
            
            <div class="md:col-span-2 text-right md:text-left">
                <span class="sticky top-24 text-4xl md:text-6xl font-bold font-serif text-editorial-border">
                    {year}
                </span>
            </div>

            <div class="md:col-span-10 flex flex-col border-t border-editorial-border">
                {postsByYear[year].map((post) => (
                    <article class="group relative flex flex-col md:flex-row md:items-baseline md:justify-between py-6 border-b border-editorial-border/60 hover:bg-background-light transition-colors">
                        
                        <div class="md:w-3/4 pr-8">
                            <h3 class="text-2xl font-sans font-bold text-editorial-text group-hover:text-primary transition-colors leading-tight mb-2">
                                <a href={`/posts/${post.slug}`} class="focus:outline-none">
                                    <span class="absolute inset-0" aria-hidden="true"></span>
                                    {post.data.title}
                                </a>
                            </h3>
                            {/* <p class="text-sm text-editorial-muted font-serif line-clamp-1">
                                {post.data.description}
                            </p> */}
                        </div>

                        <div class="mt-4 md:mt-0 md:w-1/4 flex items-center justify-end gap-4 text-[10px] font-bold uppercase tracking-widest text-editorial-muted">
                            <span class="bg-editorial-border/30 px-2 py-1 rounded-sm text-editorial-text/70 group-hover:bg-primary/10 group-hover:text-primary transition-colors">
                                {post.data.category}
                            </span>
                            <time class="whitespace-nowrap">
                                {formatDate(post.data.pubDate)}
                            </time>
                        </div>

                    </article>
                ))}
            </div>
        </div>
    ))}

    {allPosts.length === 0 && (
        <div class="text-center py-20 border border-dashed border-editorial-border">
            <p class="text-editorial-muted font-serif italic">The pages are blank. Start writing.</p>
        </div>
    )}

  </section>

</BaseLayout>